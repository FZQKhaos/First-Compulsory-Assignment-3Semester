  "components": {
    "schemas": {
      "Customer": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "address": { "type": "string" },
          "phone": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "order_date": { "type": "string", "format": "date" },
          "delivery_date": { "type": "string", "format": "date" },
          "status": { "type": "string" },
          "total_amount": { "type": "number" },
          "customer_id": { "type": "integer" }
        }
      },
      "OrderEntry": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "quantity": { "type": "number" },
          "product_id": { "type": "integer" },
          "order_id": { "type": "integer" }
        }
      },
      "Paper": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "discontinued": { "type": "boolean" },
          "stock": { "type": "integer" },
          "price": { "type": "number" }
        }
      },
      "PaperProperty": {
        "type": "object",
        "properties": {
          "paper_id": { "type": "integer" },
          "property_id": { "type": "integer" }
        }
      },
      "Property": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "property_name": { "type": "string" }
        }
      }
    }
  }
